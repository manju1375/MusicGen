<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.manju1375.musicwiki">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MusicWiki">

        <activity
            android:name=".common.ui.activity.MainActivity"
            android:exported="true"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".genres.activity.GenreDetailsActivity" />
        <activity android:name=".albums.activity.AlbumInfoActivity" />
        <activity android:name=".artists.activity.ArtistInfoActivity" />
        <activity
            android:name=".common.ui.activity.TestServicesActivity"
            android:exported="true"></activity>
    </application>

</manifest>